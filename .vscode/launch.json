{
  "configurations": [
    {
      "name": ".NET Core Launch (Web)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/Web/bin/Debug/net8.0/ChatbotApi.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Web",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/src/Web/Views"
      },
      "logging": {
        "moduleLoad": false,
        "exceptions": true,
        "trace": false
      },
      "launchBrowser": {
        "enabled": true,
        "args": "http://localhost:5000;https://localhost:5001"
      }
    }
  ]
}
